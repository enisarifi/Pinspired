<footer>Footeri (TODO)</footer>
</div>
<script>
    const postedImg = document.querySelectorAll('.posted-img');
    const messageBox = document.querySelector(".message");

    postedImg.forEach(img => {
        const parent = img.parentElement;
        const overlay = parent.children[1];
        const saveBtn = overlay.querySelector(".save-img-btn");

        if (parent.className === "inner-img-container") {
            img.addEventListener('mouseover', () => onPostedImgHover(img, overlay));
            overlay.addEventListener('mouseleave', () => onPostedImgLeave(img, overlay));

            saveBtn.addEventListener('click', (e) => {
                if (saveBtn.classList.contains("save-img-btn")) {
                    messageBox.style.opacity = 0;
                    messageBox.querySelector("p").textContent = "Post successfully saved!";

                    messageBox.style.display = "flex";
                    messageBox.style.opacity = 1;
                    setTimeout(() => {
                        messageBox.style.opacity = "0";
                        messageBox.style.display = "none";
                    }, 2000);

                    saveBtn.style.backgroundColor = "rgb(255,255,255, .7)";
                    saveBtn.textContent = "Unsave";
                    saveBtn.classList = "btn-unsave";
                    overlay.style.display = "none";
                } else if (saveBtn.classList.contains("btn-unsave")) {
                    messageBox.style.opacity = 0;
                    messageBox.querySelector("p").textContent = "Post successfully unsaved!";

                    messageBox.style.display = "flex";
                    messageBox.style.opacity = 1;
                    setTimeout(() => {
                        messageBox.style.opacity = "0";
                        messageBox.style.display = "none";
                    }, 2000);

                    saveBtn.style.backgroundColor = "#79Af79";
                    saveBtn.textContent = "Save";
                    saveBtn.classList = "save-img-btn";
                    overlay.style.display = "none";
                }
            });
        }
    });

    function onPostedImgHover(img, overlay) {
        img.style.filter = "brightness(80%)";
        overlay.style.display = "flex";
    }

    function onPostedImgLeave(img, overlay) {
        img.style.filter = "brightness(100%)";
        overlay.style.display = "none";
    }

</script>
</body>
</html>